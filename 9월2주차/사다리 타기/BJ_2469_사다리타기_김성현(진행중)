import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Main {
	public static char[][] arr;
	public static int n;
	public static int k;
	public static String finalStatus;
	public static int down(int startRow, int destinationRow, int alphaIndex){
		// 0부터 시작한다.
		// if
			// *을 만난다. row증가, col 유지

			// 현재 인덱스에서 arr 좌, 우에 -가 있다.
			// row증가
				// 좌에 있으면 col 감소
				// 우에 있으면 col 증가
		int col = alphaIndex;
		for(int i= startRow; i<=destinationRow; i++){

			if(col -1 >= 0 && arr[i][col-1] == '-'){
				col--; // 변경 가능성때문에 결과가 이상해짐
			} else if(col + 1 < n && arr[i][col] == '-'){
				col++;
			}

		}
		return col;
	}

	public static void main(String[] args) throws IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		k = Integer.parseInt(br.readLine());
		n = Integer.parseInt(br.readLine());
		finalStatus = br.readLine();
		arr = new char[n][n];
		for(int i=0; i<n; i++){
			String tmp  = br.readLine();
			for(int j=0; j<n; j++){
				arr[i][j] = tmp.charAt(j);
			}
		}

		int answer = down(0, 1, 4);
		System.out.println(answer);

		for(int i=0; i<n; i++){

			for(int j=0; j<n; j++){
				System.out.print(arr[i][j]);
			}
			System.out.println();
		}

	}

}
